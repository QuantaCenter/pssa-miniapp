/* pages/leaveDetail/leaveDetail.wxss */
.tab-container{
  width: 90%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.pass{
  width: 300rpx;
  height: 90rpx;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  float: left;
  border-radius:45rpx;
}
.fail{
  width: 300rpx;
  height: 90rpx;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  float: left;
  border-radius:45rpx;
}
.info-container{
  width: 690rpx;
  height: 100%;
  border-top: solid 1rpx #e5e5e5;
  border-left: solid 1rpx #e5e5e5;
  margin-top: 30rpx;
}
.info-row{
  width: 100%;
  height: auto;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: solid 1rpx #e5e5e5;
  border-right: solid 1rpx #e5e5e5;
}
.item-head{
  width: 230rpx;
  height: 100rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  font-size: 30rpx;
  text-align: center;
  border-right: solid 1rpx #e5e5e5;
}
.checkbox{
  width: 30rpx;
  height: 30rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  border: 1rpx solid #eeeeee;
}
.check{
  width: 30rpx;
  height: 22rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(77,77,77,0.2);
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-container {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
  font-family: SourceHanSansCN-Regular;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 34rpx;
  color: #333333;
  text-align: center;
  font-family:SourceHanSansCN-Regular;

}
.modal-content {
  padding: 50rpx 30rpx;
}
.modal-input {
  background: #fff;
  font-size: 28rpx;
  font-family: SourceHanSansCN-Regular;
  background-color:#F5F5F5;
  width:480rpx; 
  height:100rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #09BB07;
  text-align: center;
}