.per-container{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-align-items: center;
  align-items: center;
}
.user-icon{
  width: 72rpx;
  height: 74rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
}
.name-container{
  height: 74rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  -webkit-align-items: center;
  align-items: center;
  margin-left: 30rpx;
}
.name{
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}
.period{
  color: #666666;
  font-size: 30rpx;
}
.info-container{
  width: 700rpx;
  border-top: solid 1rpx #e5e5e5;
  border-left: solid 1rpx #e5e5e5;
  margin-top: 30rpx;
  margin-bottom: 200rpx;
}
.info-head{
  width: 100%;
  height: 90rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-align-items: center;
  align-items: center;
}
.info-row{
  width: 100%;
  height: 200rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-align-items: center;
  align-items: center;
}
.item-head{
  width: 100rpx;
  height: 80rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
   font-size: 26rpx;
  color: #00478B;
  text-align: center;
  border-bottom: solid 1rpx #e5e5e5;
  border-right: solid 1rpx #e5e5e5;
}
.info-item{
  width: 100rpx;
  height: 200rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
  color: #000000;
  border-bottom: solid 1rpx #e5e5e5;
  border-right: solid 1rpx #e5e5e5;
}
.text{
  width: 72rpx;
  word-break: keep-all; 
  word-wrap: break-word;
}
.check-icon{
  width: 14rpx;
  height: 24rpx;
  margin-left: 10rpx;
}
.arrow{
  width: 12rpx;
  height: 24rpx;
  margin-left: 6rpx;
}
.sign-tab{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content:center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}
.reset{
   width: 300rpx;
  height: 90rpx;
  background-color: #E64340;
  color: #FDFDFD;
  font-size: 34rpx;
  text-align: center;
  float: left;
  line-height: 100rpx;
  border-radius:45rpx;
  box-shadow:0rpx 6rpx 20rpx 4rpx rgba(255,5,0,0.25);
  margin-right: 40rpx
}
.edit{
   width: 300rpx;
  height: 90rpx;
  background-color: #1EBA09;
  color: #FDFDFD;
  font-size: 34rpx;
  text-align: center;
  float: left;
  line-height: 100rpx;
  border-radius:45rpx;
  box-shadow:0px 6px 20px 4px rgba(30,255,0,0.25);
}
.save{
  width: 300rpx;
  height: 90rpx;
  background-color: #00478B;
  color: #FDFDFD;
  font-size: 34rpx;
  text-align: center;
  line-height: 100rpx;
  float: left;
  border-radius:45rpx;
