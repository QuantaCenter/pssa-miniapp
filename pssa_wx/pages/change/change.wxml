<view class='container'>
<input bindinput='oldPass' type='password' value="{{old_pass}}" style='width:100%;height:90rpx;background-color:#ffffff;margin-top:20rpx;padding-left:38rpx;font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #666666' placeholder='请输入原密码' placeholder-style='font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #c7c7c7;'>
</input>
<input bindinput='newPass1' type='password' value="{{new_pass1}}" style='width:100%;height:90rpx;background-color:#ffffff;margin-top:50rpx;padding-left:38rpx;font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #666666' placeholder='请输入新密码' placeholder-style='font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #c7c7c7;'></input>
<input bindinput='newPass2' type='password' value="{{new_pass2}}"  style='width:100%;height:90rpx;background-color:#ffffff;margin-top:20rpx;padding-left:38rpx;font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #666666' placeholder='请再次输入新密码' placeholder-style='font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #c7c7c7;'></input>
<button disabled='{{changed}}' id='change-bt' bindtap='changePass' style='width:638rpx;height:100rpx;line-height:100rpx;text-align:center;font-family: SourceHanSansCN-Regular;font-size: 40rpx;color: #ffffff;margin-top:48rpx;background-color:#00478b;border-radius:50rpx;'>完成</button>
<image hidden='{{!old_error}}' style='position:fixed;top:46rpx;right:240rpx;width:36rpx;height:36rpx;border-radius:18rpx;z-index:100' src='../login/img/4.png'></image>
<text hidden='{{!old_error}}' style='position:fixed;font-family: SourceHanSansCN-Regular;font-size: 38rpx;color: #d81e06;top:40rpx;right:42rpx;z-index:100'>原密码错误</text>
