/**index.wxss**/
page{  
  width: 750rpx;
  background-color: #FFFFFF;  
} 
.search{
  width: 700rpx;
  height: 66rpx;
  background-color:rgba(237,237,237,1);
  font-size: 34rpx;
  border-radius: 20rpx;
  float: left;
  text-align: center;
  border:2rpx;
}
.meeting-container {
  width: 100%;
  background-color: #fff;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-align-items: center;
  align-items: center;
  overflow: hidden;
  border-top: 4rpx solid #EEEEEE;
  padding-top: 20rpx;

}
.meeting-img {
  width:690rpx;
  height:340rpx;
  border-radius:20rpx;
}
.meeting-title{
  width: 710rpx;
  color: #333333;
  font-size: 50rpx;
  padding: 38rpx 0 0 38rpx;
}
.input-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  display: -webkit-flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  background-color: #fff;
  position:fixed; 
}
.mandatory{
border:2rpx solid #F76260; 
color: #F76260;
}
.elective{
border:2rpx solid #09BB07; 
color: #09BB07;
}
.meeting-detail{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.item-container{
  width: 50%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 30rpx;  
}
.item-icon{
  width: 36rpx;
  height:36rpx;
  margin-left: 38rpx;
}
