/* pages/add/add.wxss */ 
page{
  background-color: #FAFAFA
}
.add-container{
  width: 750rpx;
  background-color: #FAFAFA;
}
.meeting-container{
  width: 100%;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap;

}
.title-container{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.meeting-title{
  width:70%;
  font-size:46rpx;
  color: #333333;
  font-family:Source Han Sans CN;
  font-weight: 600;
  line-height:50rpx; 
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.meeting-state{
  width:104rpx;
  height:46rpx;
  font-size:30rpx;
  font-weight: 400;
  font-family:Source Han Sans CN;
  text-align: center;
  margin-top: 30rpx;
  margin-right: 60rpx;
  line-height: 40rpx;
}
.check{
  color: #10AEFF;
  border:2rpx solid rgba(16,174,255,1);
  border-radius:10rpx;
}
.fail{
  color: #F76260;
  border:2rpx solid #F76260;
  border-radius:10rpx;
}
.pass{
  color: #09BB07;
  border:2rpx solid #09BB07;
  border-radius:10rpx;
}
.time-container{
  width: 100%;
  font-size:26rpx;
  color: #666666;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.period{
  width:100%;
  font-family:Source Han Sans CN;
  font-weight: 500;
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.date{
  width:100%;
  font-family:Source Han Sans CN;
  font-weight: 500;
  margin-left: 50rpx;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
}
.edit{
  width: 102rpx;
  height: 102rpx;
  position: fixed;
  bottom: 60rpx;
  right: 30rpx;
}